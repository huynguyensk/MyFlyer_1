@model MyFlyer.Web.Models.Account.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en" class="no-js">
<!--<![endif]-->

<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>Login MyFlyer</title>
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="/css/style2.css" />
    <link rel="stylesheet" type="text/css" href="/css/animate-custom.css" />
</head>

<body>
    <br>
    <div class="container">

        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
         
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <div asp-validation-summary="ModelOnly"></div>
                        <form action="Login" method="POST" autocomplete="on">
                            <h1>Log in</h1>
                            <p>
                                <label asp-for="UsernameOrEmail" class="uname" data-icon="u"> Your email or username </label>
                                <input id="username" asp-for="UsernameOrEmail" required="required" type="text"
                                       placeholder="username or email" />
                                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                            </p>
                            <p>
                                <label asp-for="Password" class="youpasswd" data-icon="p"> Your password </label>
                                <input id="password" asp-for="Password" required="required" type="password"
                                       placeholder="password" />
                            </p>
                            <p class="keeplogin">
                                <input type="checkbox" asp-for="RememberMe" id="loginkeeping" value="loginkeeping" />
                                <label asp-for="RememberMe">Remember Me</label>
                            </p>

                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>
                            <p class="change_link">
                                Not a member yet ?
                                <a asp-action="Register" class="to_register">Join us</a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </div>
</body>

</html>