@using  MyFlyer.Web.Models.DataModel;
@model List<CategoryViewModel>

<div class="aside">
    <h3 class="aside-title">Categories</h3>
    <div class="checkbox-filter">
        @foreach (var category in Model)
        {
            <div class="input-checkbox">
                <input type="checkbox">
                <label asp-for="@category.Id">
                    <span></span>
                    <a asp-action="Details" asp-route-id="@category.Id" asp-controller="Merchant">@category.Name</a>
                    <small>(120)</small>
                </label>
            </div>
        }
           
    </div>
</div>