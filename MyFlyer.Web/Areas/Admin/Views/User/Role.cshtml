@using MyFlyer.Web.Areas.Admin.Models
@model List<RoleViewModel>
@{
    Layout = null;
}

    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                    
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">i</th>
                            <td>Name</td>                            
                            <a asp-action="Role" asp-route-id="@Model[i].Id">Edit Role</a>
                        </tr>
                    }
                }

               
            </tbody>
        </table>
    </div>